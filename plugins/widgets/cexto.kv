
# kivy

#: set font "Display.ttf"
#: set font_bold "Display-Semibold.ttf"


<Cexto>:
    pos_hint: {'center_x': .5, 'bottom': 1}
    size_hint_y: None
    height: "550dp"
    orientation: 'vertical'

    # values radius
    d: 28
    z: 0

    # dates of obj
    image: "./app/view/img/roupa2.png"
    price: "1340,0.00 MT"
    name: "BLACK POPPU M250 GXT"
    discription: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Esse doloribus officia sed minima, temporibus veniam quidem atque, iure vitae, maiores obcaecati. Porro ipsam, velit exercitationem provident in est debitis corporis."    

    FloatLayout:
        BoxLayout: # Imagem do produto
            id: image_box
            size_hint_y: None
            height:  root.height/2
            pos_hint: {'center_x': .5, 'top': 1}
            canvas:
                Color:  
                    rgba: views_rectangles
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source: root.image
                allow_stretch: True
        
        BoxLayout: # base de informacoes
            pos_hint: {'center_x': .5, 'bottom': 1}
            size_hint_y: None
            height:  root.height/2
            id: box_informatios
            orientation: 'vertical'
            canvas:
                Color: 
                    rgba: white
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [root.d, root.d, root.z,root.z]
            
            ScrollView:
                bar_color: [0, 0, 0, 0]
                bar_inactive_color: [0, 0, 0, 0]
                #on_scroll_start: 

                BoxLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: "15dp"
                    BoxLayout: # Titulo
                        size_hint_y: None
                        height: "80dp"
                        BoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                #font_name: font_bold
                                size_hint_y: None
                                height: "30dp"
                                color: black
                                bold: True
                                text: root.price
                                padding_x: "22dp"
                                
                            MDLabel:
                               # font_name: font_bold
                                padding_x: "22dp"
                                size_hint_y: None
                                height: "30dp"
                                color: black
                                bold: True
                                text: root.name
                        BoxLayout: 
                            size_hint_x: None
                            width: "60dp"
                            orientation: 'vertical'
                            Widget
                            IconToggle:
                                icon: "heart"
                                halign: 'center'
                                size_hint_x: None
                                width: "30dp"
                                font_size: '30sp'
                                theme_text_color: "Custom"
                                text_color: icons if self.state == "normal" else secundary_color
                             
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: "140dp"
                        padding: ["22dp", "0dp", "5dp", "0dp"]
                        MDLabel:
                          #  font_name: font
                            text: root.discription
                            color: black
                    
                    BoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        padding: "22dp", "0dp"
                        TextInput:
                           # font_name: font
                            hint_text: "Esolha o seu tamanho"

                            # designate design
                            cursor_color: .2, .2, .2, 1
                            hint_text_color: [.8, .8, .8, .5]
                            background_normal: "./app/view/img/textfield.png"
                            background_active: "./app/view/img/textfield_down.png"
                            padding_x: "15dp"
                            padding_y: "8dp"
                            font_size: "18sp"
                    
                    BoxLayout:
                        size_hint_y: None
                        height: "42dp"
                        padding: ["22dp", "0dp"]
                        Button:
                           # font_name: font
                            text: "Adic. carrinho"
                            color: icons if self.state == "normal" else down
                            size_hint_x: None
                            width: "104dp"
                            border: [0, 0, 0, 0]
                            background_normal: "./app/view/img/car_button.png"
                            background_down: "./app/view/img/car_button_down.png"
                            
                        Widget:
                        Button:
                            font: font
                            text: "Comprar j√°"
                            color: white
                            size_hint_x: None
                            width: "104dp"
                            border: [0, 0, 0, 0]
                            background_normal: "./app/view/img/compraja.png"
                            background_down: "./app/view/img/compraja_down.png"
        
        MDIconButton:
            icon: 'chevron-down'
            halign: 'center'
            size_hint: [None, None]
            size: ["50dp", "50dp"]
            theme_text_color: "Custom"
            text_color: black
            pos_hint: {'left': 1, 'top': 1}
            on_release: 
                app.root.cexto_down(app.root.ids.root_manager.get_screen("home").ids.cexto)
                app.root.cexto_down(app.root.ids.root_manager.get_screen("shop").ids.cexto)
    
<IconToggle@MDIcon+ToggleButton>:
    on_release: print("Cliqued to IconToggle Button!")
    
    # clean atributes of button classic
    background_normal: ""
    background_down: ""
    background_color: (0, 0, 0, 0)
